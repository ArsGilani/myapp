<h1 class="current-category"><%= params[:category] %></h1>

<% if @books.count == 0 %>

	<div class="alert alert-danger" role="alert">
		<h3>В этой категории нет книг</h3>		
	</div>

	<% else %>

		<% @books.each do |book| %>
			<h2><%= link_to book.title, book_path(book) %></h2> 
		<% end %>
		
<% end %>	
