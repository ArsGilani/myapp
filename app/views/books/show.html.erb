<div class="row">
	<div class="col-md-4">
		<%= image_tag @book.book_img.url(:medium), class: "book-show" %>		
	</div>
	<div class="col-md-8">
		<h2><%= @book.title %></h2>
		<h3><%= @book.author %></h3>
		<h4>Genre: <%= @book.category.name %></h4>
		<p><%= @book.description %></p>		
	</div>
</div>
<div class="row">
	<div class="col-md-4">
		<%= render @book.reviews %>
		<% if user_signed_in? %>
			<div class="wrap-review">

				<%= link_to "Add Review", new_book_review_path(@book) %>
			</div>
		<% end %>	
	</div>
</div>
<% if user_signed_in? %>

		<%= link_to 'Back', root_path %>
	<% if @book.user_id == current_user.id %>

		<%= link_to 'Edit', edit_book_path(@book) %>
		<%= link_to 'Delete', book_path(@book), method: :delete, data: { confirm: 'Are you sure?' } %>

	<% end %>

<% end %>

<script>
	$('.review-rating').raty({
			readOnly: true,
			score: function() {
				return $(this).attr('data-score');
			},
			path: '/assets/'
		})
</script>
	




